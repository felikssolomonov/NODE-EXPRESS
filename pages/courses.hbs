<h3>Courses page</h3>

{{#if allCourses.length}}
{{#each allCourses}}
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-image">
                <img src="{{image}}" alt="{{title}}">
            </div>
            <div class="card-content">
                <span class="card-title">{{title}}</span>
                <p class="price">{{price}}</p>
            </div>
            <div class="card-action actions">
                {{#if @root.isAuth}}
                    <a href="/courses/{{id}}" target="_blank">Open course</a>
                    <form action="/card/add" method="POST">
                        <input type="hidden" name="_csrf" value="{{@root.csurf}}">
                        <input type="hidden" name="id" value="{{id}}">
                        <button type="submit" class="btn btn-primary">Add to basket</button>
                    </form>
                {{/if}}
            </div>
            <div class="card-action actions">
                {{#if @root.isAuth}}
                    <a href="/courses/{{id}}/edit?allow=true" target="_blank">Edit course</a>
                    <form action="/courses/remove" method="POST">
                        <input type="hidden" name="_csrf" value="{{@root.csurf}}">
                        <input type="hidden" name="id" value="{{id}}">
                        <button class="btn red">Remove course</button>
                    </form>
                {{/if}}
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<h3>Нет курсов</h3>
{{/if}}

<a href="/">Home page</a>