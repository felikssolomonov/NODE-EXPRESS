<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
                <li class="tab col s6"><a href="#register">Зарегаться</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}
            <h3>Аутентификация</h3>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input placeholder="placeholder" name="email" id="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Write an Email"></span>
                </div>
                <div class="input-field">
                    <input placeholder="placeholder" name="password" id="password" type="password" class="validate"
                        required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Write an Password"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{csurf}}">
                <button class="btn btn-primary" type="submit">
                    Войти
                </button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
            <h3>Регистрация</h3>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input placeholder="placeholder" name="name" id="name" type="text" class="validate"
                        required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Write an Name"></span>
                </div>
                <div class="input-field">
                    <input placeholder="placeholder" name="email" id="regemail" type="email" class="validate" required>
                    <label for="regemail">Email</label>
                    <span class="helper-text" data-error="Write an Email"></span>
                </div>
                <div class="input-field">
                    <input placeholder="placeholder" name="password" id="regpassword" type="password" class="validate"
                        required>
                    <label for="regpassword">Password</label>
                    <span class="helper-text" data-error="Write an Password"></span>
                </div>
                <div class="input-field">
                    <input placeholder="placeholder" name="confirmpassword" id="confirmpassword" type="password" class="validate"
                        required>
                    <label for="confirmpassword">Password confirm</label>
                    <span class="helper-text" data-error="Write an Password confirm"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{csurf}}">
                <button class="btn btn-primary" type="submit">
                    Зарегистрироваться
                </button>
            </form>
        </div>
    </div>
</div>