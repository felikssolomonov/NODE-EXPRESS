<h1>Корзина</h1>

<div id="card">
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Name of course</th>
                <th>Count</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
        {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove"
                    data-id="{{_id}}" data-csurf="{{@root.csurf}}"
                    >Remove</button>
                </td>
            </tr>
        {{/each}}
        </tbody>

    </table>

    <p><strong>Price:</strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csurf}}">
        <button type="submit" class="btn">
            Make an order
        </button>
    </form>

    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>