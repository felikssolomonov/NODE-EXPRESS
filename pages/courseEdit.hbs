<h3>Edit course {{course.title}}</h3>
<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input placeholder="Placeholder" name="title" id="title" type="text" class="validate" required
            value="{{course.title}}">
        <label for="title">Name of course</label>
        <span class="helper-text" data-error="Write an Name of course"></span>
    </div>
    <div class="input-field">
        <input placeholder="Placeholder" name="price" id="price" type="number" class="validate" required min="1"
            value="{{course.price}}">
        <label for="price">Price of course</label>
        <span class="helper-text" data-error="Write an Price of course"></span>
    </div>

    <div class="input-field">
        <input placeholder="Placeholder" name="image" id="image" type="text" class="validate" required
            value="{{course.image}}">
        <label for="img">URL of image</label>
        <span class="helper-text" data-error="Write an URL of image"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csurf}}">
    <button class="btn btn-primary" type="submit">
        Save change course
    </button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csurf}}">
    <button class="btn red">Remove course</button>
</form>